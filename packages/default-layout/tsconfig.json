{
    "include": ["./src", "../../@types"],
    "exclude": ["./dist", "./lib"],
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ES2015",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    }
}
